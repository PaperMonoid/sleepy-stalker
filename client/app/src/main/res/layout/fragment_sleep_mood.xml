<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
             xmlns:tools="http://schemas.android.com/tools"
             android:layout_width="match_parent"
             android:layout_height="match_parent"
             tools:context=".SleepMood">

    <!-- TODO: Update blank fragment layout -->

    <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
        <TextView
                android:text="What's my mood?"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" android:id="@+id/txtSleepMood" android:padding="10dp"
                android:textSize="24sp"/>
        <Space
                android:layout_width="match_parent"
                android:layout_height="wrap_content" android:layout_weight="1"/>
        <Button
                android:text="Happy"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" android:id="@+id/btnSleepMoodHappy"/>
        <Button
                android:text="Sad"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" android:id="@+id/btnSleepMoodSad"/>
        <Button
                android:text="Angry"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" android:id="@+id/btnSleepMoodAngry"/>
        <Space
                android:layout_width="match_parent"
                android:layout_height="wrap_content" android:layout_weight="1"/>
    </LinearLayout>
</FrameLayout>