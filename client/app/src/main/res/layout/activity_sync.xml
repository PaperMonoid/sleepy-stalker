<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".SyncActivity">

    <TableLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        <TableRow android:layout_width="match_parent" android:layout_height="match_parent">
            <TextView
                    android:text="Sleeps:"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" android:id="@+id/txtSyncLabelSleeps" android:textSize="18sp"
                    android:padding="10dp" android:layout_weight="1"/>
            <TextView
                    android:text="TextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" android:id="@+id/txtSyncValueSleeps" android:padding="10dp"
                    android:textSize="18sp"/>
        </TableRow>
        <TableRow android:layout_width="match_parent" android:layout_height="match_parent">
            <TextView
                    android:text="Wake ups:"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" android:id="@+id/txtSyncLabelWakeUps" android:textSize="18sp"
                    android:padding="10dp" android:layout_weight="1"/>
            <TextView
                    android:text="TextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" android:id="@+id/txtSyncValueWakeUps" android:padding="10dp"
                    android:textSize="18sp"/>
        </TableRow>
        <TableRow android:layout_width="match_parent" android:layout_height="match_parent" android:layout_weight="1"
                  android:gravity="center">
            <ProgressBar
                    style="?android:attr/progressBarStyle"
                    android:layout_width="wrap_content"
                    android:layout_height="100dp"
                    android:id="@+id/barSync" android:layout_weight="1"/>
        </TableRow>
        <TableRow android:layout_width="match_parent" android:layout_height="match_parent" android:gravity="right">
            <Button
                    android:text="Sync"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" android:id="@+id/btnSync" android:layout_weight="1"/>
        </TableRow>
    </TableLayout>
</android.support.constraint.ConstraintLayout>