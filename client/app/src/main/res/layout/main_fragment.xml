<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/layoutMain"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ui.main.MainFragment">

    <LinearLayout
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="0dp" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintStart_toStartOf="parent"
    >
        <Space
                android:layout_width="match_parent"
                android:layout_height="wrap_content" android:layout_weight="1"/>
        <ImageView
                android:layout_width="150dp"
                android:layout_height="150dp" android:id="@+id/imageView" android:layout_gravity="center"
                android:layout_marginBottom="15dp" app:srcCompat="@drawable/sleepy_stalker"/>
        <TextView
                android:text="A sleep tracking system which predicts your time asleep. "
                android:layout_width="200dp"
                android:layout_height="wrap_content" android:id="@+id/textView" android:lines="3"
                android:layout_marginBottom="10dp" android:gravity="center"/>
        <Button
                android:text="Go to sleep"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" tools:layout_editor_absoluteY="16dp"
                tools:layout_editor_absoluteX="138dp" android:id="@+id/btnSleepF"/>
        <Button
                android:text="Wake up"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" tools:layout_editor_absoluteY="78dp"
                tools:layout_editor_absoluteX="148dp" android:id="@+id/btnWakeUpF"/>
        <Space
                android:layout_width="match_parent"
                android:layout_height="wrap_content" android:layout_weight="1"/>
        <Button
                android:text="Sync"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" android:id="@+id/btnSyncF"/>
        <Space
                android:layout_width="match_parent"
                android:layout_height="wrap_content" android:layout_marginBottom="10dp"/>
    </LinearLayout>
</android.support.constraint.ConstraintLayout>
