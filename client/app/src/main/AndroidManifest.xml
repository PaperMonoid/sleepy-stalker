<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          package="com.coffeebeans.tritiummonoid.sleepystalker"
          android:installLocation="preferExternal">
    <application
            android:allowBackup="true"
            android:icon="@mipmap/sleepy_stalker"
            android:label="@string/app_name"
            android:roundIcon="@mipmap/sleepy_stalker_round"
            android:supportsRtl="true"
            android:theme="@style/AppTheme">
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>
                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
        <activity android:name=".SleepActivity">
        </activity>
        <activity android:name=".WakeUpActivity">
        </activity>
    </application>
    <uses-permission android:name="android.permission.INTERNET"></uses-permission>
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
</manifest>